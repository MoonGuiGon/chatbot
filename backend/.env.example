# Flask Configuration
PORT=5001
FLASK_ENV=development
FLASK_DEBUG=True

# Database (optional - will use mock data if not configured)
MONGODB_URI=mongodb://localhost:27017/
POSTGRES_URI=postgresql://username:password@localhost:5432/chatbot_db
NEO4J_URI=bolt://localhost:7687
NEO4J_PASSWORD=your_neo4j_password

# ===== LLM API 설정 =====
# 3가지 모델을 각각 다른 API로 설정할 수 있습니다

# Chat Model (대화 생성용)
CHAT_API_KEY=your_chat_api_key
CHAT_API_URL=https://your-chat-api.com
CHAT_MODEL_NAME=your_chat_model_name

# Embedding Model (텍스트를 벡터로 변환)
EMBEDDING_API_KEY=your_embedding_api_key
EMBEDDING_API_URL=https://your-embedding-api.com
EMBEDDING_MODEL_NAME=your_embedding_model_name

# Vision Model (이미지/문서 분석용)
VISION_API_KEY=your_vision_api_key
VISION_API_URL=https://your-vision-api.com
VISION_MODEL_NAME=your_vision_model_name

# Redis Cache
REDIS_URL=redis://localhost:6379

# CORS
FRONTEND_URL=http://localhost:5173
